    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "jest /validator",
            "cwd": "${workspaceFolder}/packages/validator",
            "program": "node_modules/.bin/jest",
            "args": [
                "${fileBasenameNoExtension}",
                "--runInBand",
                "--config",
                "jest.config.debug.ts",
                "--testTimeout",
                "1000000"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
{
  "name": "graphql-directive",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "test": "yarn workspaces run test",
    "build": "yarn workspaces run build",
    "clean": "yarn workspaces run clean",
    "publish:canary": "yarn build && npx lerna publish --canary",
    "precoverage": "istanbul-merge --out coverage/coverage-final.json $(find packages -name 'coverage*.json')",
    "coverage": "npx istanbul report --include coverage/coverage-final.json --dir coverage --report html --report lcov",
    "posttest": "yarn coverage"
  },
  "private": true,
  "devDependencies": {
    "@nrwl/nx-cloud": "latest",
    "@types/jest": "^29.4.0",
    "lerna": "^6.5.1",
    "nx": "15.7.2",
    "prettier": "^2.6.2",
    "typescript": "^4.9.5",
    "istanbul": "^0.4.5",
    "istanbul-merge": "^1.1.1"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
